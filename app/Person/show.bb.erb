<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @person.display_name %></h1>
    <%= link_to "Edit", :action => :edit, :id => @person.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">DisplayName</td>
        <td class="itemValue"><%= @person.display_name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">HomeNumber</td>
        <td class="itemValue"><%= @person.home_number%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">City</td>
        <td class="itemValue"><%= @person.city%></td>
      </tr>
      
    </table>
  </div>

</div>
